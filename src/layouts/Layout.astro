---
import '../styles/global.scss'
import Navbar from '../components/layout/Navbar.astro'

interface Props {
    title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
    <head>
        <!-- Global Metadata -->
        <meta charset='utf-8' />
        <meta name='viewport' content='width=device-width,initial-scale=1' />
        <link rel='icon' type='image/svg+xml' href='/favicon.ico' />
        <meta name='generator' content={Astro.generator} />

        <!-- Primary Meta Tags -->
        <title>Dawichi - {title}</title>
        <meta name='title' content='Dawichi - software engineer' />
        <meta name='description' content='Explore my website!' />

        <!-- Bootstrap & Icons -->
        <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css' />
        <!-- Devicon.dev -->
        <link rel='stylesheet' href='https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css' />
        <!-- Animate CSS -->
        <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css' />
    </head>
    <body class='bg-amber-50 text-zinc-900 dark:bg-zinc-900 dark:text-white'>
        <header>
            <Navbar />
        </header>

        <main>
            <slot />
        </main>

        <footer class='bg-white/50 dark:bg-zinc-800'>
            <div class='container mx-auto grid p-3 text-center dark:bg-zinc-800 lg:grid-cols-2'>
                <div>dawichi.dev &copy; {new Date().getFullYear().toString()}</div>
                <div>
                    Made with <span class='rounded bg-yellow-300 p-1 dark:bg-yellow-500'>JS</span> and <i class='bi bi-cup-hot-fill'></i>
                </div>
            </div>
        </footer>
    </body>
</html>
